<h3>Cocktails</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
    <% @cocktails.each do |cocktail| %>
    <tr>
      <td style="padding-right: 20px"><%= link_to cocktail.name, cocktail_path(cocktail) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>

<h4><%= link_to "Add a New Cocktail", new_cocktail_path(@cocktail) %></h4>
